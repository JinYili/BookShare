@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "User list";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">ID</th>
            <th scope="col">Birth</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
        <tr>
            <th scope="row">@u.Id</th>
            <td>@u.UserName</td>
            <td>@u.Email</td>
            <td>@u.IdCardNo</td>
            <td>@u.BirthDate</td>
            <td>
                <form asp-action="DeleteUser" asp-route-id="@u.Id" method="post" style="white-space: nowrap;">
                    <a asp-action="EditUser" asp-route-id="@u.Id" class="btn btn-primary">Edit</a>
                    <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Confirm delete？')">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>

<a asp-action="AddUser" class="btn btn-primary">Add user</a>